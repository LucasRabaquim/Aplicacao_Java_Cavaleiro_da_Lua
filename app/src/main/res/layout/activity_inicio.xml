<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".inicio_Activity">


    <TextView
        android:id="@+id/inicio_titulo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="26dp"
        android:background="@color/preto1"
        android:text="@string/txt_inicio_titulo"
        android:textAlignment="center"
        android:textColor="@color/branco1"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inicio_titulo"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="220dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="390dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/noticia1"
                            tools:srcCompat="@drawable/noticia1" />

                        <TextView
                            android:id="@+id/txt_noticia1"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@color/azul"
                            android:linksClickable="true"
                            android:text="@string/txt_noticia1"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textColorLink="@color/teal_200"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="390dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/noticia2"
                            tools:srcCompat="@drawable/noticia2" />

                        <TextView
                            android:id="@+id/txt_noticia2"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@color/azul"
                            android:linksClickable="true"
                            android:text="@string/txt_noticia2"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textColorLink="@color/teal_200"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="390dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/noticia3"
                            tools:srcCompat="@drawable/noticia3" />

                        <TextView
                            android:id="@+id/txt_noticia3"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@color/azul"
                            android:linksClickable="true"
                            android:text="@string/txt_noticia3"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textColorLink="@color/teal_200"
                            android:textSize="20sp" />
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/txt_inicio"
        android:layout_width="320dp"
        android:layout_height="212dp"
        android:layout_marginBottom="4dp"

        android:text="@string/txt_inicio"
        android:textAlignment="center"

        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2"
        app:layout_constraintVertical_bias="0.212" />
</androidx.constraintlayout.widget.ConstraintLayout>
