<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:foregroundTint="#0B0B0B"
    tools:context=".curiosidades_Activity">


    <ImageView
        android:id="@+id/img_curio"
        android:layout_width="177dp"
        android:layout_height="198dp"
        android:layout_marginTop="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/img_lua"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/img_lua"
        app:layout_constraintTop_toBottomOf="@+id/img_lua"
        app:layout_constraintVertical_bias="0.043"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txt_Curio"
        android:layout_width="256dp"
        android:layout_height="183dp"
        android:text="@string/placeholder"

        android:textColor="@color/branco1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/img_curio"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/img_curio"
        app:layout_constraintTop_toBottomOf="@+id/img_curio"
        app:layout_constraintVertical_bias="0.395" />

    <ImageButton
        android:id="@+id/btn_curio_proxima"
        android:layout_width="46dp"
        android:layout_height="97dp"
        android:background="@drawable/seta_direita"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/txt_Curio"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.343"
        tools:src="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/btn_curio_anterior"
        android:layout_width="46dp"
        android:layout_height="97dp"
        android:background="@drawable/seta_esquerda"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txt_Curio"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.343"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/img_lua"
        android:layout_width="114dp"
        android:layout_height="96dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.009"
        tools:src="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>