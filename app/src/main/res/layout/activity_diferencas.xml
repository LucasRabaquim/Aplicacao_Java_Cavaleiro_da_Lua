<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_quadrinhos"
    tools:context=".diferencas_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:background="@color/pretoTransparente"
                android:orientation="horizontal">

                <ImageView

                    android:id="@+id/img_hq1"
                    android:layout_width="131dp"
                    android:layout_height="195dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/recomeco"
                    tools:layout_editor_absoluteX="32dp"
                    tools:layout_editor_absoluteY="67dp"
                    tools:src="@drawable/recomeco" />

                <TextView
                    android:id="@+id/txt_hq1"
                    android:layout_width="154dp"
                    android:layout_height="match_parent"
                    android:text="@string/txt_hq1"
                    android:textColor="@color/branco"
                    tools:layout_editor_absoluteX="219dp"
                    tools:layout_editor_absoluteY="74dp" />

                <Button
                    android:id="@+id/btn_hq1"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_marginTop="50dp"
                    android:layout_weight="1"
                    android:background="@color/teal_700"
                    android:text="@string/btn_Comprar"
                    android:textColor="@color/branco" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:background="@color/pretoTransparente"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_hq2"
                    android:layout_width="131dp"
                    android:layout_height="195dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/paladinos12"
                    tools:layout_editor_absoluteX="32dp"
                    tools:layout_editor_absoluteY="257dp"
                    tools:src="@drawable/paladinos12" />

                <TextView
                    android:id="@+id/txt_hq2"
                    android:layout_width="153dp"
                    android:layout_height="match_parent"
                    android:text="@string/txt_hq2"
                    android:textColor="@color/branco"
                    tools:layout_editor_absoluteX="219dp"
                    tools:layout_editor_absoluteY="257dp" />

                <Button
                    android:id="@+id/btn_hq2"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_marginTop="50dp"
                    android:layout_weight="1"
                    android:background="@color/teal_700"
                    android:text="@string/btn_Comprar"
                    android:textColor="@color/branco" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:background="@color/pretoTransparente"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_hq3"
                    android:layout_width="131dp"
                    android:layout_height="199dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/paladinos3"
                    tools:layout_editor_absoluteX="32dp"
                    tools:layout_editor_absoluteY="447dp"
                    tools:src="@drawable/paladinos3" />

                <TextView
                    android:id="@+id/txt_hq3"
                    android:layout_width="156dp"
                    android:layout_height="match_parent"
                    android:text="@string/txt_hq3"
                    android:textColor="@color/branco"
                    tools:layout_editor_absoluteX="219dp"
                    tools:layout_editor_absoluteY="625dp" />

                <Button
                    android:id="@+id/btn_hq3"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_marginTop="50dp"
                    android:layout_weight="1"
                    android:background="@color/teal_700"
                    android:text="@string/btn_Comprar"
                    android:textColor="@color/branco" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:background="@color/pretoTransparente"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_hq4"
                    android:layout_width="131dp"
                    android:layout_height="198dp"
                    app:srcCompat="@drawable/loucura"
                    tools:layout_editor_absoluteX="32dp"
                    tools:layout_editor_absoluteY="625dp"
                    tools:src="@drawable/loucura" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="154dp"
                    android:layout_height="match_parent"
                    android:text="@string/txt_hq4"
                    android:textColor="@color/branco"
                    tools:layout_editor_absoluteX="219dp"
                    tools:layout_editor_absoluteY="447dp" />

                <Button
                    android:id="@+id/btn_hq4"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_marginTop="50dp"
                    android:layout_weight="1"
                    android:background="@color/teal_700"
                    android:text="@string/btn_Comprar"
                    android:textColor="@color/branco" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>