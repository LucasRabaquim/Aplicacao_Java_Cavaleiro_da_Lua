<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".diferencas_Activity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/preto"
        android:elevation="2dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0">

        <Button
            android:id="@+id/btn_menu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/hamburger"
            android:onClick="voltarMenu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0" />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="408dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView

                    android:id="@+id/img_hq1"
                    android:layout_width="156dp"
                    android:layout_height="195dp"
                    android:scaleType="centerCrop"
                    tools:layout_editor_absoluteX="32dp"
                    tools:layout_editor_absoluteY="67dp"
                    tools:src="@drawable/recomeco" />

                <TextView
                    android:id="@+id/txt_hq1"
                    android:layout_width="154dp"
                    android:layout_height="match_parent"
                    android:text="@string/txt_hq1"
                    android:textColor="@color/black"
                    tools:layout_editor_absoluteX="219dp"
                    tools:layout_editor_absoluteY="74dp" />

                <Button
                    android:id="@+id/btn_Comprar"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_weight="1"
                    android:text="Comprar" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_hq2"
                    android:layout_width="157dp"
                    android:layout_height="194dp"
                    android:scaleType="centerCrop"
                    tools:layout_editor_absoluteX="32dp"
                    tools:layout_editor_absoluteY="257dp"
                    tools:src="@drawable/paladinos12" />

                <TextView
                    android:id="@+id/txt_hq2"
                    android:layout_width="151dp"
                    android:layout_height="match_parent"
                    android:text="@string/txt_hq2"
                    android:textColor="@color/black"
                    tools:layout_editor_absoluteX="219dp"
                    tools:layout_editor_absoluteY="257dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_weight="1"
                    android:text="Comprar" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_hq3"
                    android:layout_width="154dp"
                    android:layout_height="199dp"
                    android:scaleType="centerCrop"
                    tools:layout_editor_absoluteX="32dp"
                    tools:layout_editor_absoluteY="447dp"
                    tools:src="@drawable/paladinos3" />

                <TextView
                    android:id="@+id/txt_hq3"
                    android:layout_width="156dp"
                    android:layout_height="match_parent"
                    android:text="@string/txt_hq3"
                    android:textColor="@color/black"
                    tools:layout_editor_absoluteX="219dp"
                    tools:layout_editor_absoluteY="625dp" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_weight="1"
                    android:text="Comprar" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_hq4"
                    android:layout_width="156dp"
                    android:layout_height="198dp"
                    tools:layout_editor_absoluteX="32dp"
                    tools:layout_editor_absoluteY="625dp"
                    tools:src="@drawable/loucura" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="154dp"
                    android:layout_height="match_parent"
                    android:text="@string/txt_hq4"
                    android:textColor="@color/black"
                    tools:layout_editor_absoluteX="219dp"
                    tools:layout_editor_absoluteY="447dp" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_weight="1"
                    android:text="Comprar" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>